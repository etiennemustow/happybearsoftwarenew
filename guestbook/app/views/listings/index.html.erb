<h1> New Entry </h1>

<%= form_for :listing, url: {controller: "listings", action: "create"} do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :message %><br>
    <%= f.text_area :message %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>



<h1>Entry listings</h1>
 
<table>
  <tr>
    <th>Name</th>
    <th>Message</th>
  </tr>
 
  <% @listings.each do |listing| %>
    <tr>
      <td><%= listing.name %></td>
      <td><%= listing.message %></td>
    </tr>
  <% end %>
</table>